<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/custom_playerinfo_background"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btnCloseDialogSetting_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="@drawable/back_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="80dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnInstruction_logout"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/Black"
            android:text="Hướng dẫn chơi game"
            android:textColor="@color/White"
            android:textSize="8pt"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:background="@drawable/instruction"
            android:backgroundTint="@color/White" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_sbt_setting"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnContact_logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#00000000"
            android:text="Theo dõi chúng tôi để cập nhật tin tức sớm nhất về Farm Valley"
            android:textColor="@color/Black"
            android:textSize="7pt" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/facebook" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_logout_urgent"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Black"
            android:layout_gravity="center_vertical"
            android:text="Log Out"
            android:textSize="25dp" />
    </LinearLayout>
</LinearLayout>